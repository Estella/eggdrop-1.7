# Makefile for src/mod/dns.mod/
# $Id: Makefile.in,v 1.2 2004/08/26 03:21:14 wcc Exp $

RESLIB = @RESLIB@
RESINCLUDE = @RESINCLUDE@
srcdir = .


doofus:
	@echo ""
	@echo "Let's try this from the right directory..."
	@echo ""
	@cd ../../../ && make

static: ../dns.o
	@echo "$(RESLIB)" >> ../mod.xlibs

modules: ../../../dns.$(MOD_EXT)

../dns.o:
	$(CC) $(CFLAGS) $(CPPFLAGS) $(RESINCLUDE) -DMAKING_MODS -c $(srcdir)/dns.c
	@rm -f ../dns.o
	mv dns.o ../

../../../dns.$(MOD_EXT): ../dns.o
	$(LD) -o ../../../dns.$(MOD_EXT) ../dns.o $(RESLIB) $(XLIBS) $(MODULE_XLIBS)
	$(STRIP) ../../../dns.$(MOD_EXT)

depend:
	$(CC) $(CFLAGS) $(CPPFLAGS) -MM $(srcdir)/dns.c > .depend

clean:
	@rm -f .depend *.o *.$(MOD_EXT) *~

distclean: clean
	@rm -f Makefile config.cache config.log config.status

